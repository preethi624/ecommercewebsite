<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Your original navbar styles (unchanged) */
        .navbar {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1001;
        }

        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 50px; /* Adjust based on your navbar height */
            left: 0;
            height: calc(100% - 100px); /* Subtract navbar and footer height */
            width: 250px;
            background-color: green;
            z-index: 1000;
        }

        .sidebar a {
            padding: 15px 20px;
            display: block;
            color: white;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        /* Main content area */
        .main-content {
            margin-left: 250px; /* Account for sidebar width */
            padding: 20px;
            margin-top: 50px; /* Same height as navbar */
            min-height: calc(100vh - 100px); /* Ensure no overlap with footer */
            background-color: #f4f4f4;
        }

        .content-header {
            margin-top: 20px;
        }

        /* Table and input styling */
        .table {
            margin-top: 30px;
            width: 90%;
            margin-left: auto;
            margin-right: auto;
        }

        .btn {
            margin: 5px;
        }

        .input-group {
            margin-left: auto;
            margin-right: auto;
        }

        /* Footer styles */
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 50px;
            background-color: #333;
            color: white;
            text-align: center;
            line-height: 50px;
            z-index: 1001;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 200px;
            }

            .input-group {
                width: 100%;
            }

            .table {
                width: 100%;
            }
        }

        @media (max-width: 576px) {
            .sidebar {
                width: 100%;
                height: auto;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>

<body>

    <%-include("../../views/partials/admin/header")%>  

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#">Dashboard</a>
        <a href="/admin/users">Customers</a>
        <a href="/admin/category">Category</a>
        <a href="#">Brands</a>
        <a href="/admin/addProducts">Add Product</a>
        <a href="/admin/product">Products</a>
        <a href="#">Coupon</a>
        <a href="#">Banner</a>
        <a href="#">Orders</a>
    </div>

    <!-- Main content -->
    <div class="main-content">
        <div class="content-header">
            <h2 class="content-title card-title">Products</h2>
        </div>

        <header class="card-header text-center">
            <form action="" method="get" class="d-inline">
                <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px;">
                    <input type="text" class="form-control border-0 rounded-pill" placeholder="Search products or brands" name="search">
                    <button class="btn border-0" type="submit">Search</button>
                </div>
            </form>
        </header>

        <div class="right mt-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        
                        <th scope="col"><b>Product name</b></th>
                        
                        <th scope="col"><b>Category</b></th>
                        <th scope="col"><b>Sale Price</b></th>
                        <th scope="col"><b>Offer Price</b></th>
                        <th scope="col"><b>Offer</b></th>
                        <th scope="col"><b>Stock in Kg</b></th>
                        <th scope="col"><b>Action</b></th>
                        <th scope="col"><b>Edit</b></th>
                        <th scope="col"><b>Image</b></th>
                        
                        
                        
                    </tr>
                </thead>
                <tbody>
                    <% if (data && data.length > 0) { %>
                    <%for(let i=data.length-1;i>=0;i--){%>
                    <tr>
                        <td><%=data[i].productName%></td>
                        <td><%=data[i].category.name%></td>
                        <td>
                            <% if (data[i].productOffer && data[i].regularPrice > 0) { %>
                              <%= (data[i].regularPrice - (data[i].regularPrice * data[i].productOffer / 100)).toFixed(2) %>
                            <% } else { %>
                              <%= data[i].regularPrice %>
                            <% } %>
                          </td>
                          
                        <td>
                            <%if( locals.data[i].productOffer){%>
                                <%=data[i].productOffer%>

                                <%}else{%>
                                    0%
                                    <%}%>



                        </td>
                      
                        <td>
                            <%if (locals.data[i].productOffer===0){%>
                            <button class="btn btn-info" style="width: 100px;" onclick="addOffer('<%=data[i]._id%>')">
                                <a href="#" class="text-white">Add Offer</a>
                            </button>
                            <%}else{%>

                            <button class="btn btn-info" style="width: 100px;" onclick="removeOffer('<%=data[i]._id%>')">
                                <a href="#" class="text-white">Remove</a>
                            </button>
                            <%}%>
                        </td>
                        <td><%=data[i].quantity%></td>
                        <td>
                            <button class="btn btn-danger" style="width: 80px;">
                                <a href="" class="text-white">Block</a>
                            </button>

                            <button class="btn btn-success" style="width: 80px;">
                                <a href="" class="text-white">Unblock</a>
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-info" style="width: 80px;">
                                <a href="/admin/editProduct?id=<%=data[i]._id%>" class="text-white">Edit</a>
                            </button>
                        </td>
                        
                        <td>
                            
                            <td>
                                <% if (data[i].productImage && data[i].productImage.length > 0) { %>
                                    <img src="/uploads/product-images/<%=data[i].productImage[0]%>" alt="Product Image" style="width: 80px; height: auto;">
                                <% } else { %>
                                    <span>No Image</span>
                                <% } %>
                            </td>
                            
                        </td>
                        <td>
                            <%= JSON.stringify(data[i].images) %>
                        </td>
                        <td>
                            <button class="btn btn-danger" style="width: 80px" onclick="softDeleteProduct('<%=data[i]._id%>')">
                               Delete
                            </button>
                          </td

                    </tr>
                    <%}%>
                    <% } else { %>
                        <tr>
                            <td colspan="8">No products found</td>
                          </tr>
                          
                          <% } %>

                         
                </tbody>
            </table>
            <a href="/admin/softProducts">View soft deleted products</a>
        </div>
        <div class="pagination-container">
           
            <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
            <span class="current-page"><%= i %></span>
            <% } else { %>
            <a href="?page=<%= i %>"><%= i %></a>
            <% } %>
            <% } %>
            <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
            <% } %>
          </div>
        </div>
    </div>

   
   
 

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    async function addOffer(productId){
        const{value:amount}=await Swal.fire({
            'title':'Offer in percentage',
            input:'number',
            inputLabel:'percentage', 
            inputPlaceholder:'%',
        })
        $.ajax({
            url:"/admin/addProductOffer",
            method:'post',
            data:{
                percentage:amount,
                productId:productId
            },
            success:(response)=>{
                if(response.status===true){
                    location.reload()
                    Swal.fire('offer added','The offer has been removed','success')
                }else{
                    alert("failed")
                }
            }
        })
    }
    async function removeOffer(productId){
        try{
            Swal.fire({
                title:'Remove offer',
                text:'Are you sure you want to remove this offer',
                icon:'warning',
                showCancelButton:true,
                confirmButtonColor:'#3085d6',
                cancelButtonColor:'d33',
                confirmButtonText:'Yes,remove it!',
                timer:5000,
                timerProgressBar:true

            }).then(async(result)=>{
                if(result.isConfirmed){
                    $.ajax({
                        url:"/admin/removeProductOffer",
                        method:'post',
                        data:{
                            productId:productId
                        },
                        success:(response)=>{
                            if(response.status===true){
                                Swal.fire("Removed!","The offer has been removed","success")
                                location.reload()
                            }else if(response.status===false){
                                Swal.fire('failed')
                                    
                                
                            }else{
                                alert('failed')
                            }
                        }
                    })
                }
            })
        }catch(error){
            console.error(error)

        }
    }
    async function softDeleteProduct(productId) {
        try {
            Swal.fire({
                title: 'Delete Product',
                text: 'Are you sure you want to delete this product?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
            }).then(async (result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/admin/softDeleteProduct',
                        method: 'post',
                        data: { productId: productId },
                        success: (response) => {
                            if (response.status === true) {
                                Swal.fire('Deleted!', 'The product has been deleted.', 'success');
                                location.reload();
                            } else {
                                Swal.fire('Error', 'Failed to delete the product.', 'error');
                            }
                        },
                    });
                }
            });
        } catch (error) {
            console.error(error);
        }
    }
    
</script>
</body>

</html>

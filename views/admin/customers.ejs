<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Customers</title>
    <style>
        /* Basic layout styling */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            height: 100%;
        }

        /* Navbar Styling */
        .navbar {
            background-color: green;
            padding: 10px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .navbar img {
            height: 40px;
        }

        .logout-btn {
            background-color: white;
            color: green;
            border: none;
            padding: 8px 16px;
            cursor: pointer;
            font-size: 14px;
            border-radius: 5px;
        }

        /* Sidebar styling */
        .sidebar {
            margin-top: 50px;
            width: 250px;
            background-color: green;
            height: 100vh;
            position: fixed;
            overflow: auto;
            padding-top: 20px;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 15px;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #575757;
        }

        /* Main content area */
        .main-content {
            margin-left: 250px; /* Matches sidebar width */
            padding: 20px;
            margin-top: 50px; /* Adjust for navbar height */
        }

        /* Customers page specific styling */
        .header {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .input-group {
            width: 500px;
            margin: 0 auto 20px; /* Center and give bottom margin */
            display: flex;
            border: 1px solid grey;
            border-radius: 20px;
            overflow: hidden;
        }

        .input-group input {
            border: none;
            padding: 8px 15px;
            flex: 1;
        }

        .input-group button {
            border: none;
            padding: 8px 20px;
            background-color: green;
            color: white;
            cursor: pointer;
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table th, table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        table th {
            background-color: green;
            color: white;
        }

        table td a {
            color: white;
            text-decoration: none;
        }

        .btn-danger, .btn-success {
            padding: 5px 10px;
            border-radius: 3px;
            text-align: center;
        }

        .btn-danger {
            background-color: red;
        }

        .btn-success {
            background-color: green;
        }

        .pagination {
            display: flex;
            justify-content: center;
        }

        .pagination li {
            list-style: none;
            margin: 0 5px;
        }

        .pagination a {
            padding: 10px;
            color: green;
            text-decoration: none;
        }

        .pagination a:hover {
            background-color: #575757;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Include the header partial -->
    <%-include("../../views/partials/user/header")%>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#">Dashboard</a>
        <a href="/admin/users">Customers</a>
        <a href="/admin/category">Category</a>
        <a href="#">Brands</a>
        <a href="/admin/addProducts">Add Product</a>
        <a href="/admin/product">Products</a>
        <a href="#">Coupon</a>
        <a href="#">Banner</a>
        <a href="#">Orders</a>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        <div class="header">Customers</div>
    
        <!-- Search bar -->
        <header class="card-header text-center mb-20">
            <form action="/admin/users/" method="get" class="d-inline">
                <div class="input-group">
                    <input type="text" class="form-control border-0" placeholder="Search customers..." name="search">
                    <button class="btn" type="submit">Search</button>
                </div>
            </form>
        </header>
        <!-- Customers Table -->
        <div class="right mt-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col"><b>Name</b></th>
                        <th scope="col"><b>Email</b></th>
                        <th scope="col"><b>Phone No</b></th>
                        <th scope="col"><b>Action</b></th>
                    </tr>
                </thead>
                <tbody>
                    <%for(let i=0;i<userData.length;i++){%>
                        <tr>
                            <td>
                                <%=userData[i].username%>
                            </td>
                            <td>
                                <%=userData[i].email%>
                            </td>
                            <td>
                                <%=userData[i].phone%>
                            </td>
                            <td>
                                <%if(userData[i].isBlocked===false){%>
                                    <button class="btn btn-danger">
                                        <a href="/admin/blockCustomer?id=<%=userData[i]._id%>" onclick="return confirmBlock()" class="text-white">Block</a>
                                    </button>
                                    <%}else{%>
    
                                        <button class="btn btn-success">
                                            <a href="/admin/unblockCustomer?id=<%=userData[i]._id%>"
                                                class="text-white">Unblock</a>
                                        </button>
                                        <%}%>
                            </td>
                        </tr>
                        <%}%>
                </tbody>
            </table>
        </div>
    
        <!-- Pagination -->
        <div class="container mt-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <%for(let i=0;i<=totalPages;i++){%>
                        <li class="page-item <%=(i===currentPage) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%=i%>">
                                <%=i %>
                            </a>
    
                        </li>
                        <%}%>
                </ul>
            </nav>
        </div>
    </div>
    <script>
        function confirmBlock(){
            return confirm("Are you sure you want to block this customer")
        }
    </script>
    
    </body>
    
    </html>
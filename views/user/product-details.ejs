<%- include("../../views/partials/user/header") %>
<!-- Breadcrumbs Section -->
<ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="#"> <%= product.productName %></a></li>
</ul>

<style>
    .breadcrumb {
        display: flex;
        list-style: none;
        padding: 10px 0;
        margin-bottom: 20px;
        background-color: transparent;
    }

    .breadcrumb li {
        margin-right: 5px;
    }

    .breadcrumb li a {
        text-decoration: none;
        color: #007bff;
        transition: color 0.2s ease;
    }

    .breadcrumb li a:hover {
        color: #0056b3;
    }

    .breadcrumb li::after {
        content: '>';
        margin-left: 5px;
    }

    .breadcrumb li:last-child::after {
        content: '';
    }

    .breadcrumb li:last-child a {
        color: #6c757d;
        pointer-events: none;
    }

    .product-img {
        width: 100%;
        height: auto;
        object-fit: cover;
        transition: transform 0.25s ease;
    }

    .thumbnail-gallery img {
        cursor: pointer;
        border: 2px solid #ddd;
        border-radius: 4px;
        transition: border-color 0.2s ease;
    }

    .thumbnail-gallery img:hover {
        border-color: #007bff;
    }

    .container {
        margin: 80px;
    }

    .related-products {
        margin-top: 50px;
    }

    .related-products .product-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .related-products .product-card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .related-products img {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    .related-products h5 {
        margin: 10px 0;
        font-size: 1rem;
        color: #333;
    }

    .related-products a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    }
</style>

<section class="product-details">
    <div class="container mt-5">
        <div class="row">
            <!-- Thumbnails Column -->
            <div class="col-md-2 d-none d-md-flex flex-column align-items-center thumbnail-gallery">
                <% if (product.productImage.length > 1) { %>
                    <% product.productImage.forEach(function(image, index) { %>
                        <img src="/uploads/product-images/<%= image %>" alt="Image <%= index + 1 %>" class="img-thumbnail mb-2" onclick="changeMainImage('/uploads/product-images/<%= image %>')">
                    <% }) %>
                <% } %>
            </div>

            <!-- Main Image Column -->
            <div class="col-md-6 text-center">
                <img id="main-product-img" class="product-img img-fluid" src="/uploads/product-images/<%= product.productImage[0] %>" alt="<%= product.productName %>">
            </div>

            <!-- Details Column -->
            <div class="col-md-4">
                <h2><%= product.productName %></h2>
                <p class="text-muted small">0 ratings & 0 reviews</p>
                <h4>Regular Price: Rs <%= product.regularPrice %></h4>

                <% if(product.category.categoryOffer) { %>
                    <h5>Offer added: <%= product.category.categoryOffer %></h5>
                <% } else if(product.productOffer) { %>
                    <h5>Offer added: <%= product.productOffer %></h5>
                <% } else { %>
                    <h5>Offer added: 0%</h5>
                <% } %>

                <% if (product.regularPrice && product.productOffer > 0) { %>
                    <h5>Sale Price: <%= (product.regularPrice - (product.regularPrice * product.productOffer / 100)).toFixed(2) %></h5>
                <% } else if(product.regularPrice&&product.category.categoryOffer){%>
                    <h5>Sale Price: <%= (product.regularPrice - (product.regularPrice * product.category.categoryOffer / 100)).toFixed(2) %></h5>
                <%}else { %>
                    <h5>Sale Price: <%= product.regularPrice %></h5>
                <% } %>

                <% if (product.quantity > 0) { %>
                    <h4>Stock: <%= product.quantity %> Kg</h4>
                    <p class="mt-4">Highlights: <%= product.description %></p>
                    <p>Expiry: 10 days</p>
                    <p>30-day return policy</p>
    
                    <div class="d-flex align-items-center gap-2">
                        <form action="/cart/add/<%= product._id %>" method="POST" class="mb-0">
                            <div class="mb-3 d-flex align-items-center">
                                <label for="quantity" class="form-label me-2">Quantity:</label>
                                <input type="number" id="quantity" name="quantity" class="form-control w-auto" value="1" min="1" max="<%= product.quantity %>">
                            </div>
                            <button type="submit" class="btn btn-success">Add to Cart</button>
                        </form>
                    
                        <a style="margin-top: 50px;" id="order-now-btn" href="/order/summary/<%= product._id %>?quantity=1" class="btn btn-warning" >
                            Shop Now
                        </a>
                    </div>
                <% } else { %>
                    <h4 class="text-danger">Sold Out</h4>
                    <p class="text-muted">The item is currently out of stock.</p>
                <% } %>
            </div>
        </div>

        <!-- Related Products Section -->
        <div class="related-products mt-5">
            <h3>Related Products</h3>
            <div class="row">
                <% relatedProducts.forEach(function(relatedProduct) { %>
                    <div class="col-md-3 mb-4">
                        <div class="product-card">
                            <a href="/product/details/<%= relatedProduct._id %>">
                                <img src="/uploads/product-images/<%= relatedProduct.productImage[0] %>" alt="<%= relatedProduct.productName %>">
                                <h5><%= relatedProduct.productName %></h5>
                                <p>Price: Rs <%= relatedProduct.regularPrice %></p>
                            </a>
                            
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<%- include("../../views/partials/user/footer") %>

<script>
    // Change the main product image when a thumbnail is clicked
    function changeMainImage(newImageUrl) {
        const mainImg = document.getElementById('main-product-img');
        mainImg.src = newImageUrl;
    }

    // Zoom functionality
    const mainImg = document.getElementById('main-product-img');
    mainImg.addEventListener('mouseenter', function() {
        this.style.transform = 'scale(1.5)';
    });

    mainImg.addEventListener('mouseleave', function() {
        this.style.transform = 'scale(1)';
    });

    const quantityInput = document.getElementById('quantity');
    const orderNowBtn = document.getElementById('order-now-btn');

    quantityInput.addEventListener('input', function () {
        const selectedQuantity = quantityInput.value;
        orderNowBtn.href = `/order/summary/<%= product._id %>?quantity=${selectedQuantity}`;
    });
</script>

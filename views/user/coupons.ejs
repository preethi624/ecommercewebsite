<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Coupons</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .coupon-container {
      margin-top: 40px;
      overflow: hidden;
      margin-bottom: 80px;
    
    }

    .coupon-card {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      overflow: hidden;
      margin-bottom: 20px;
      transition: transform 0.3s ease;
    }

    .coupon-card:hover {
      transform: scale(1.02);
    }

    .coupon-header {
      background-color: #007bff;
      color: white;
      padding: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .coupon-code {
      font-weight: bold;
      font-size: 1.2em;
    }

    .coupon-description {
      padding: 15px;
      background-color: #f8f9fa;
      color: #333;
      font-size: 0.9em;
    }

    .btn-apply {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 10px 15px;
      font-size: 0.9em;
      transition: background-color 0.3s ease;
    }

    .btn-apply:hover {
      background-color: #218838;
    }

body, html {
      height: 100%;
      display: flex;
      flex-direction: column;
      margin: 0;
     
    }
    .content {
      flex: 1;
    } 
  </style>
</head>
<body>
  <%- include("../partials/user/header") %>

  <div class="container-fluid coupon-container">
    <h1 class="text-center mb-4">Available Coupons</h1>

    <div class="row" style="margin-left: 20%;">
      <% if (coupon.length > 0) { %>
        <% coupon.forEach(function(c) { %>
          <div class="col-md-6 col-lg-4">
            <div class="coupon-card">
              <div class="coupon-header">
                <div class="coupon-code"><%= c.code %></div>
                
              </div>
              <div class="coupon-description">
                <%= c.description %><br>
                <strong>Valid until:</strong> <%= new Date(c.expiryDate).toLocaleDateString() %>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-center">No coupons available at the moment.</p>
      <% } %>
    </div>
  </div>

  <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- FontAwesome for icons -->
  <script>
    function applyCoupon(code) {
      window.location.href = '/order/checkout/?couponCode=' + code;
     
    }
  </script>
</body>
</html>

  <%- include("../../views/partials/user/footer") %>


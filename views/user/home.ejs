    <!--products-->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <h2 style="color: green;">NEW ARRIVALS</h2>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                <%for(let i=0;i<products.length;i++){%>
                    <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                        <div class="product-cart-wrap mb-30">
                            <div class="product-img-action-wrap">
                                <div class="product-img product-img-zoom">

                                    <a href="/productDetails?id=<%=products[i]._id%>">
                                        <img class="default-img" src="/uploads/product-images/<%=products[i].productImage[0]%>" alt="<%=products[i].productName%>">
                                    </a>
                              
                                </div>
                                <a href="" class="wishlist-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                            </div>
      
      
                            <div class="product-content-wrap">
                                <h6><%=products[i].productName%></h6>
                                <h5>Price:Rs <%=products[i].salePrice%></h5>
                                <a href="">Add to cart</a>
                            </div>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>

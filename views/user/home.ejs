                                    <button type="submit" class="btn btn-success" <% if (products[i].quantity <= 0) { %> disabled <% } %>><%= products[i].quantity > 0 ? 'Add to Cart' : 'Out of Stock' %></button>
                                </div> 

                            </form>
                           
      
      
                            
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>
      </section>

      
